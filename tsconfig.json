{
    "compilerOptions": {
        "outDir": "./dist/",
        // noImplicitAny - ограничивает типизацию переменных в функциях и методах
        "noImplicitAny": true,
        "module": "ESNext",
        "target": "ES5",
        "jsx": "react-jsx",
        "allowJs": true,
        "moduleResolution": "node",
        // esModuleInterop позволяет работать с пакетами, которые используют commonjs как с обычными пакетами с помощью import
        // (require() module.exports)=commonjs
        "esModuleInterop": true,
        //позволяет использовать import без дополнительных настроек(* as)
        "allowSyntheticDefaultImports": true,
        "baseUrl": ".",
        "paths": {
          "*": ["./src/*"]
        },
    },
    "ts-node": {
        "compilerOptions": {
            "module": "CommonJS"
        }
    },
    "include": [
        "./config/jest/setupTests.ts",
        "./src/**/*.ts",
        "./src/**/*.tsx",
    ]
}
